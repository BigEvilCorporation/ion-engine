	BULLET_LIBS_DEBUG = 
		BulletCollision_debug.lib
		BulletDynamics_debug.lib
		LinearMath_debug.lib
		;

	BULLET_LIBS_RELEASE = 
		BulletCollision.lib
		BulletDynamics.lib
		LinearMath.lib
		;

	if ( debug in $(CONFIG) )
